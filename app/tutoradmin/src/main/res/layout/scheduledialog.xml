<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/scheduleImageView"
        android:layout_marginTop="10dp"
        android:layout_width="50dp"
        android:src="@mipmap/ic_launcher"
        android:layout_height="50dp"/>

    <EditText
        android:id="@+id/edtTeacherName"
        android:layout_width="300dp"
        android:hint="Enter TeacherName"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/edtTeacherEcode"
        android:layout_width="300dp"
        android:hint="Enter TeacherEcode"
        android:layout_margin="10dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        />


    <EditText
        android:id="@+id/edtTeacherRole"
        android:layout_width="300dp"
        android:hint="Enter TeacherRole"
        android:layout_margin="10dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        />



    <EditText
        android:id="@+id/edtTeacherSittingRoom"
        android:layout_width="300dp"
        android:hint="Enter Teacher Sitting Room"
        android:layout_margin="10dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        />




    <EditText
        android:id="@+id/edtTeacherEmail"
        android:layout_width="300dp"
        android:hint="Enter TeacherEmail"
        android:layout_margin="10dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        />


    <EditText
        android:id="@+id/edtTeacherPhone"
        android:layout_width="300dp"
        android:hint="Enter TeacherPhone"
        android:layout_margin="10dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        />






    <TextView
        android:textColor="@color/black"
        android:text="Click on Image To Upload The Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:text="Submit"
        android:backgroundTint="@color/black"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        />











</LinearLayout>