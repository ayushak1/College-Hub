<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/scheduleImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/teacherNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher Name"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/teacherEcodeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher ECODE"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/teacherRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher Role"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/teacherRoomNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher room"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/teacherEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher email"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/teacherPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher phone"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_margin="8dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
